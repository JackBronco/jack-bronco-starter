<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jack Bronco</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background: #000;
        color: #eaeaea;
        font-family: Georgia, "Times New Roman", serif;
      }

      .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
      }

      /* Base fade behavior for any staged element */
      .part {
        opacity: 0;
        animation: fadeIn 3s ease forwards;
      }

      /* Main line styling */
      .line {
        font-size: clamp(1.4rem, 3vw, 2.2rem);
        letter-spacing: 0.02em;
      }

      /* Timing */
      .part-1 { animation-delay: 1s; }     /* "You weren’t supposed to be here" */
      .part-2 { animation-delay: 4.2s; }   /* " yet." */
      .part-3 { animation-delay: 8s; }     /* laughter line */

      /* Laughter styling */
      .laughter {
        margin-top: 1.5rem;
        font-size: 1rem;
        opacity: 0.85; /* slight dim */
      }

      @keyframes fadeIn {
        to { opacity: 1; }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div>
        <div class="line">
          <span class="part part-1">You weren’t supposed to be here</span>
          <span class="part part-2"> yet.</span>
        </div>

        <div class="laughter part part-3">
          a low, slow, deep laugh rumbles…
        </div>
      </div>
    </div>
  </body>
</html>
