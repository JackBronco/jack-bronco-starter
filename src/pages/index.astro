<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jack Bronco</title>
    <style>
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background: #000;
        color: #eaeaea;
        font-family: Georgia, "Times New Roman", serif;
        overflow: hidden; /* so stars don't create scrollbars */
      }

      .container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        padding: 2rem;
      }

      .stack {
        max-width: 60ch;
        position: relative;
        z-index: 2;
      }

      .line {
        font-size: clamp(1.4rem, 3vw, 2.2rem);
        letter-spacing: 0.02em;
        opacity: 0;
        animation: fadeIn 2s ease forwards,
        fadeOut 2s ease forwards;
      }

      /* beats */
      .part-1 { animation-delay: 1s, 9s; }    /* You weren’t supposed to be here */
      .part-2 { animation-delay: 2.8s, 10s; }  /* yet. */
      .part-3 { animation-delay: 5.6s, 11.2s; }  /* But since you are… */
      .part-4 { animation-delay: 7.2s, 12.4s; }  /* Twinkle, twinkle little star. */
      .part-5 { animation-delay: 10.2s, 14s; } /* laughter */


      .laughter {
        margin-top: 1.5rem;
        font-size: 1rem;
        opacity: 0;
        animation: fadeIn 3s ease forwards,
        fadeOut 2s ease forwards;
        animation-delay: 10.0s, 14s;
      }

      @keyframes fadeIn {
        to { opacity: 1; }
      }

      @keyframes fadeOut {
        to { opacity: 0; }
      }

      /* --- Stars --- */
      .stars {
        position: absolute;
        inset: 0;
        pointer-events: auto; /* container doesn't block clicks */
        z-index: 3;
      }

      .star {
        display: block;
  pointer-events: auto;
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 999px;
  background: rgba(255,255,255,0.95);
  box-shadow: 0 0 14px rgba(255,255,255,0.75);
  opacity: 1;                 /* TEMP: make it undeniable */
  transform: translate(-50%, -50%) scale(1);
  animation: twinkle 2.8s ease-in-out infinite;
      }

      .star:hover {
        transform: scale(2.4);
      }

      @keyframes twinkle {
        0%, 100% { filter: brightness(0.8); }
        50%      { filter: brightness(1.25); }
      }

      /* optional: tiny hint text for accessibility / focus */
      .star:focus-visible {
        outline: 2px solid rgba(255,255,255,0.65);
        outline-offset: 4px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="stars" id="stars"></div>

      <div class="stack">
        <div class="line part-1">You weren’t supposed to be here</div>
        <div class="line part-2">yet.</div>

        <div class="line part-3">But since you are…</div>
        <div class="line part-4">Twinkle, twinkle little star.</div>

        <div class="laughter">a low, slow, deep laugh rumbles…</div>
      </div>
    </div>

    <script>
 const STAR_LINK = "/door/";
  const starsLayer = document.getElementById("stars");

  console.log("⭐ stars script loaded", { starsLayer });

  function rand(min, max) {
    return Math.random() * (max - min) + min;
  }

  function createStar() {
    if (!starsLayer) {
      console.error("No #stars element found");
      return;
    }

    const a = document.createElement("a");
    a.href = STAR_LINK;
    a.className = "star";
    a.setAttribute("aria-label", "A small light");

    // dead-center test
    a.style.left = "50%";
    a.style.top = "50%";
    a.style.transform = "translate(-50%, -50%) scale(1)";

    a.style.animationDuration = rand(2.2, 4.2) + "s";

    starsLayer.appendChild(a);
    console.log("⭐ star appended", a);

    requestAnimationFrame(() => { a.style.opacity = "1"; });
  }

  // test: immediate
  createStar();

  // normal timeline
  window.setTimeout(createStar, 9000);
    </script>
  </body>
</html>
